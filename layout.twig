<!doctype html>
<html lang="{{ page.seoLang }}">

	<head>
		{% include "head.twig" %}
		{% include basekit.headScript %}
	</head>

	<body id="image-fixed" class="{{ page.backgroundClass }} {{ site.colorSwatch }} {{ isV10sSite ? 'id="migrated-site"' : '' }}">
		<div class="page-wrap">
			{% include "header.twig" %}
			
			{% block content %}
			{% endblock %}

			{% include "footer.twig" %}
		</div>

		{% include basekit.bodyScript %}

		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>');</script>

		<script type="text/javascript">
			!function() {
				function supportsSVG() {
					return !!document.createElementNS && !! document.createElementNS('http://www.w3.org/2000/svg', 'svg').createSVGRect
				}
				if (supportsSVG()) document.documentElement.className += ' svg'
			}()

			function is_touch_device() {
			 return (('ontouchstart' in window)
			      || (navigator.MaxTouchPoints > 0)
			      || (navigator.msMaxTouchPoints > 0));
			}
			 
			if (!is_touch_device()) {
			
			
			window.onscroll = function pxParallax() {
				var parallax = document.getElementById("parallax");
					parallax.style.top = (window.pageYOffset/2)+"px";
					parallax.style["-webkit-backface-visibility"] = "hidden";
					
				document.getElementById("header-fixed").style.top = (window.pageYOffset)+"px";
				document.getElementById("image-fixed").style.backgroundPosition = "center "+(window.pageYOffset)+"px";
			}
		}
		</script>

	</body>
</html>
